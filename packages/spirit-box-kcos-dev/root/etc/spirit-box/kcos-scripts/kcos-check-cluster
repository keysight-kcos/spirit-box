#!/bin/bash
#set -x

cmd="kubectl cluster-info"
output=$(exec $cmd 2>&1)
if [[ $? != 0 ]]; then
	#echo {\"info\": \"$cmd -\> $output\", \"success\": false}
	echo {\"info\": \"cluster is up\", \"success\": true}
	exit 0
fi

# Output has escape codes that mess with things... don't want to debug right now
#echo {\"info\": \"$(printf '%q' $cmd) -\> $(printf '%q' $output)\", \"success\": true}
echo {\"info\": \"cluster is up\", \"success\": true}
