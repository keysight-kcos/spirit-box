#!/bin/bash
#set -x

cmd="kubectl wait --namespace kcos-ui --for=condition=Ready --timeout=1s pod -l app.kubernetes.io/name=kcos-ui-service"

output=$(exec $cmd 2>&1)
if [[ $? != 0 ]]; then
        #echo {\"info\": \"$cmd -\> $output\", \"success\": false}
        echo {\"info\": \"$cmd -\> failed\", \"success\": false}
        exit 0
fi

echo {\"info\": \"$cmd -\> succeeded\", \"success\": true}